
@model IEnumerable<MyDoctorAPI.Models.Picture>

@{
    var slider1 = Model.FirstOrDefault(image => image.Type == "Slider1")?.Name;
    var slider2 = Model.FirstOrDefault(image => image.Type == "Slider2")?.Name;
}
