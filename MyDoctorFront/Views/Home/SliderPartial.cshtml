                <div class="container">
                    <p>رفقاؤك في رحلتك </p>
                    <h2>للأنوثة</h2>
                            @*<a href="https://docs.google.com/forms/d/e/1FAIpQLSe-znsk0h0hkHAad31dZfL0ak8ygEtSEPSGA_8pOd2yIo-Mtg/viewform" target="_blank" class="btn-get-started scrollto">احجز استشارتك الأن </a>*@
                            <a asp-controller="Home" asp-action="Booking" target="_blank" class="btn-get-started scrollto">احجز معنا الأن </a>
                </div>
            </div>
            }
            <!-- Slide 2 -->
    
                if (item.Type == "Slider2")
                {
                    <div class="carousel-item" style="background-image: url(@item.Name);">
                <div class="container">
                    <p>رفقاؤك في رحلتك </p>
                    <h2>للأمومة </h2>
                            <a asp-controller="Home" asp-action="Booking" target="_blank" class="btn-get-started scrollto">احجز معنا الأن </a>

                </div>
            </div>
                }
            <!-- Slide 3 -->
  
                if (item.Type == "Slider3")
                {
                    <div class="carousel-item" style="background-image: url(@item.Name)">
                <div class="container">
                    <p>رفقاؤك في رحلتك </p>
                    <h2>للنجاح </h2>
                            <a asp-controller="Home" asp-action="Booking" target="_blank" class="btn-get-started scrollto">احجز معنا الأن </a>

                </div>
            </div>
                }
                }
        </div>

        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>

    </div>
</section><!-- End Hero -->